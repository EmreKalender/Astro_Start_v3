---
import Layout from '../layouts/common.astro'
---
<Layout title="Ezo Tool">
	<p class="text-center text-gray-700">Most Advanced Tool in the Market for Toddlers</p>
      <button class="block text-white bg-green-500 px-5 py-3 mx-auto mt-10 font-bold rounded-lg">Sign up now</button>
		<p class="mb-10 mt-10 ml-5 mr-5 text-2xl font-extrabold text-center">Advanced Capabilities of Ezo Tool</p>
		<h2 class="mb-16 text-xl text-center text-gray-700">List of Capabilities</h2>
		<div class="grid sm:grid-cols-2 gap-y-10 gap-x-10 ml-20 mr-20 text-center">
			<div class=" rounded-lg bg-white"><h3 class="font-bold text-xl p-4">First</h3> <p class="pb-8 text-gray-500">One</p></div>
			<div class=" rounded-lg bg-white"><h3 class="font-bold text-xl p-4">Second</h3> <p class="pb-8 text-gray-500">Two</p></div>
			<div class=" rounded-lg bg-white"><h3 class="font-bold text-xl p-4">Third</h3>  <p class="pb-8 text-gray-500">Three</p></div>
			<div class=" rounded-lg bg-white"><h3 class="font-bold text-xl p-4">Fourth</h3>  <p class="pb-8 text-gray-500">Four</p></div>
		</div>
</Layout>

