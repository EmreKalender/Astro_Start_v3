---
import Layout from '../layouts/common.astro'
---

<Layout title='Pricing Plans'>

		<div class="grid sm:grid-cols-2 gap-y-10 gap-x-10 ml-20 mr-20 mb-10 text-center">
            <div class=" rounded-lg bg-white">
                <h3 class="font-bold text-xl p-4">Free Edition</h3> 
                <p class="text-3xl font-extrabold mb-5">$0/Month</p>
                <p class="text-l  text-gray-500 mb-5">Free Features</p>    
                <ul class="pb-8 text-gray-500 text-left pl-10 text-l">
                    <li class="mb-4">
                        <span>&starf;</span>
                        <span>Free Stuff</span>  
                    </li >
                    <li class="mb-4">
                        <span>&starf;</span>
                        <span>More Free Stuff</span>  
                    </li>
                </ul>
            </div>
			<div class=" rounded-lg bg-white">
                <h3 class="font-bold text-xl p-4">Pro Edition</h3> 
                <p class="text-3xl font-extrabold mb-5">$99/Month</p>
                <p class="text-l  text-gray-500 mb-5">Pro Features</p>    
                <ul class="pb-8 text-gray-500 text-left pl-10 text-l">
                    <li class="mb-4">
                        <span>&starf;</span>
                        <span>Pro Stuff</span>  
                    </li >
                    <li class="mb-4">
                        <span>&starf;</span>
                        <span>More Pro Stuff</span>  
                    </li>
                </ul>
            </div>
            
		</div>
        <a href="#"
	class="bg-blue-500 text-white hover:bg-blue-600 mt-8 block py-3 px-6 border border-transparent rounded-md text-center font-medium ml-20 mr-20 ">Sign Up</a>
</Layout>
